{% extends 'KijhoMailerBundle:Default:main.html.twig' %}
{% block title %}{{'kijho_mailer.layout.edit'|trans}}{% endblock %}
{% block main_content %}
    <h2 class="pull-left">{{'kijho_mailer.layout.edit'|trans}}</h2>
    <div class="btn-group pull-right top-margin" role="group" aria-label="...">
        <a href="{{path('kijho_mailer_layout')}}" class="btn btn-default">{{'kijho_mailer.global.back'|trans}}</a>
    </div>
    <ol class="col-lg-12 breadcrumb">
        <li><a href="{{path('kijho_mailer_homepage')}}">{{'kijho_mailer.global.home'|trans}}</a></li>
        <li><a href="{{path('kijho_mailer_layout')}}">{{'kijho_mailer.layout.layouts'|trans}}</a></li>
        <li class="active">{{'kijho_mailer.layout.edit'|trans}}</li>
    </ol>
        
        <div class="col-lg-12">
            <form role="form" action="{{path('kijho_mailer_layout_update',{'layoutId':layout.id})}}" class="form-horizontal" method="post" {{ form_enctype(form) }}>
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.header) }}
                        {{ form_widget(form.header, {'attr':{'style':'height:250px;'}}) }}
                        <p class="help-block">{{'kijho_mailer.layout.header_help'|trans}}</p>
                    </div>
                </div>
                <div class="col-lg-6" style="padding-left: 30px;">
                    <div class="form-group">
                        {{ form_label(form.languageCode) }}
                        {{ form_widget(form.languageCode) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.footer) }}
                        {{ form_widget(form.footer, {'attr':{'style':'height:250px;'}}) }}
                        <p class="help-block">{{'kijho_mailer.layout.footer_help'|trans}}</p>
                    </div>
                    <div class="form-group">
                        {{ form_widget(form._token) }} 
                        <button type="submit" class="btn btn-primary pull-right">{{'kijho_mailer.global.update'|trans}}</button>
                    </div>
                </div>
            </form>
        </div>
{% endblock %}

{% block scripts %}
    $('#kijho_mailerbundle_layout_type_header, #kijho_mailerbundle_layout_type_footer').wysihtml5();
{% endblock %}