{% extends 'KijhoMailerBundle:Default:main.html.twig' %}
{% block title %}New Layout{% endblock %}
{% block main_content %}
    <h2 class="pull-left">New Layout</h2>
    <div class="btn-group pull-right top-margin" role="group" aria-label="...">
        <a href="{{path('kijho_mailer_layout')}}" class="btn btn-default">Back</a>
    </div>
    <ol class="col-lg-12 breadcrumb">
        <li><a href="{{path('kijho_mailer_homepage')}}">Home</a></li>
        <li><a href="{{path('kijho_mailer_layout')}}">Layouts</a></li>
        <li class="active">New Layout</li>
    </ol>
        
        <div class="col-lg-12">
            <form role="form" action="{{path('kijho_mailer_layout_save')}}" class="form-horizontal" method="post" {{ form_enctype(form) }}>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.header) }}
                        {{ form_widget(form.header) }}
                        <p class="help-block">Type a layout header</p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.footer) }}
                        {{ form_widget(form.footer) }}
                        <p class="help-block">Type a layout footer</p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.languageCode) }}
                        {{ form_widget(form.languageCode) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form._token) }} 
                        <button type="submit" class="btn btn-primary pull-right">Create Layout</button>
                    </div>
                </div>
            </form>
        </div>
{% endblock %}

{% block scripts %}
    $('#kijho_mailerbundle_email_layout_type_header, #kijho_mailerbundle_email_layout_type_footer').wysihtml5();
{% endblock %}