{% extends 'KijhoMailerBundle:Default:main.html.twig' %}
{% block title %}{{'kijho_mailer.template_group.new'|trans}}{% endblock %}
{% block header_content %}
    <h2 class="pull-left">{{'kijho_mailer.template_group.new'|trans}}</h2>
    <div class="btn-group pull-right top-margin" role="group" aria-label="...">
        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default">{{'kijho_mailer.global.back'|trans}}</a>
    </div>
{% endblock %}
{% block main_content %}
    <ol class="col-lg-12 breadcrumb">
        <li><a href="{{path('kijho_mailer_homepage')}}">{{'kijho_mailer.global.home'|trans}}</a></li>
        <li><a href="{{path('kijho_mailer_template_group')}}">{{'kijho_mailer.template_group.template_groups'|trans}}</a></li>
        <li class="active">{{'kijho_mailer.template_group.new'|trans}}</li>
    </ol>

    <div class="col-lg-12">
        <form role="form" action="{{path('kijho_mailer_template_group_save')}}" class="form-horizontal" method="post" {{ form_enctype(form) }}>
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form._token) }} 
                    <button type="submit" class="btn btn-primary pull-right">{{'kijho_mailer.global.create'|trans}}</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block scripts %}

{% endblock %}