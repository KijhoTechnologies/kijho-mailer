{% macro showErrorMessage(key) %}
    {% for message in app.session.flashbag.get(key) %}
        <div class="alert alert-dismissable alert-danger col-lg-12">
            {% if loop.index == loop.first %}
                <button data-dismiss="alert" class="close" type="button">x</button>
                <h4><i class="fa fa-close"></i> {{'kijho_mailer.global.error'|trans}}</h4>
            {% endif %}
            {{ message|raw }}
        </div>
    {% endfor %}
{% endmacro %}

